\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ciit-manual}[2015/12/13]


% We declare new variables which will be used in the title of the exam. The variables with @ in them are global and are used inside the \maketitle macro

\def\@coursetitle{}
\def\@experimentnumber{}
\def\@experimenttitle{}

% We declare commands for externally setting the variables that are used inside the \maketitle macro

\newcommand{\coursetitle}[1]{\def\@coursetitle{#1}}
\newcommand{\experimentnumber}[1]{\def\@experimentnumber{#1}}
\newcommand{\experimenttitle}[1]{\def\@experimenttitle{#1}}


% We customize the \maketitle command to make it generate the content that we want
\renewcommand{\maketitle}{
   
    \includegraphics[width=0.1\textwidth]{comsats-logo}         % Place the COMSATS logo
    \vspace{-5\baselineskip}                                    % Since we want the text and the logo to be on the same lines we simply pull back by 5 lines 

    \begin{center}
        {COMSATS Institute of Information Technology,\\
        Islamabad Campus}

        \vspace{0.5\baselineskip}
        \@coursetitle 

        \rule{0.8\linewidth}{0.5pt}

        \vspace{\baselineskip}

        {\LARGE Experiment {\@experimentnumber}:{ \@experimenttitle}}

        \rule{0.8\linewidth}{0.5pt}

        \vspace{\baselineskip}

    \end{center}
}
